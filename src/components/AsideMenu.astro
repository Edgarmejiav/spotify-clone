---
import LibraryIcon from "@/icons/Library.astro"
import HomeIcon from "@/icons/Home.astro"
import SearchIcon from "@/icons/Search.astro"
import SideMenuItem from "./SideMenuItem.astro"
import SideMenuCard from "./SideMenuCard.astro"
import {playlists} from "@/lib/data";
---
<nav class="flex flex-col flex-1 gap-2">
    <div class="bg-zinc-900 rounded-lg p-2">
        <ul>
            <SideMenuItem href="/">
                <HomeIcon/>
                Inicio
            </SideMenuItem>

            <SideMenuItem href="/#">
                <SearchIcon/>
                Buscar
            </SideMenuItem>
        </ul>
    </div>
    <div class="bg-zinc-900 rounded-lg p-2 flex-1">
        <ul>
            <SideMenuItem href="/">
                <LibraryIcon/>
                Tu biblioteca
            </SideMenuItem>

            {playlists.map((playlist) =>
                    <SideMenuCard playlist={playlist}/>)}
        </ul>

        <a
                href={`https://github.com/Edgarmejiav/spotify-clone`}
                target="_blank"
                class="playlist-item flex  relative p-2 overflow-hidden items-center gap-5 rounded-md hover:bg-zinc-800"
        >
            <picture class="h-12 w-12 flex-none">
                <img
                        src={"/img.png"}
                        alt={`code`}
                        class="object-cover w-full h-full rounded-md"
                />
            </picture>

            <div class="flex flex-auto flex-col truncate">
                <h4 class="text-white text-sm">
                    Codigo
                </h4>
                <span class="text-xs text-gray-400">
                    github
                </span>
            </div>
        </a>
    </div>
</nav>